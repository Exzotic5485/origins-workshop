{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "outputs": ["dist/**"]
        },
        "dev": {
            "persistent": true,
            "cache": false,
            "inputs": [".env*"]
        },
        "db:generate": {
            "cache": false
        },
        "db:migrate": {
            "cache": false
        },
        "db:push": {
            "cache": false,
            "interactive": true
        }
    }
}
